<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ZiXunLayout_Item"
    android:orientation="horizontal"
    android:layout_height="100dp">
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/contentpic"
        android:layout_marginTop="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/icon"
            android:textColor="#353434"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentTitle"
            android:text="Java开源博客"
            android:textStyle="bold"
            />
        <TextView

            android:textSize="12dp"
            android:text="我们得到显示的社没回家"
            android:textColor="#353434"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentBody"
            />
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/sd"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/compose_toolbar_mention_normal"
                />
            <TextView
                android:layout_toRightOf="@+id/sd"
                android:textColor="#353434"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contentzuozhe"
                android:text="dfdf"
                />
            <TextView
                android:textColor="#353434"
                android:layout_toRightOf="@+id/contentzuozhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsd"
                android:layout_marginLeft="3dp"
                android:id="@+id/contentShijian"
                />
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_30"
                android:layout_toLeftOf="@+id/contentpinglun"
                />
            <TextView
                android:textColor="#100101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sd"
                android:layout_marginLeft="5dp"
                android:id="@+id/contentpinglun"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>